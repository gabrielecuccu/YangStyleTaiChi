<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General">

        <ListPreference
            app:dialogTitle="Duration of each movement"
            app:entries="@array/durations_names"
            app:entryValues="@array/durations_values"
            app:key="RANDOM_DURATION"
            app:negativeButtonText="@null"
            app:positiveButtonText="@null"
            app:summary="%s"
            app:title="Duration of each movement" />

        <SwitchPreferenceCompat
            app:key="SUGGEST_TEN_PRINCIPLES"
            app:title="Suggest ten principles" />

    </PreferenceCategory>

    <PreferenceCategory app:title="10 minutes Qi Gong">

        <ListPreference
            app:dialogTitle="Ten minutes Qi Gong number of movements"
            app:entries="@array/number_of_movements_names"
            app:entryValues="@array/number_of_movements_values"
            app:key="RANDOM_NUMBER_OF_MOVEMENTS"
            app:negativeButtonText="@null"
            app:positiveButtonText="@null"
            app:summary="%s"
            app:title="Number of movements" />

        <SwitchPreferenceCompat
            app:key="ADD_WARM_UP_TO_RANDOM"
            app:title="Add Warm Up exercises" />

        <SwitchPreferenceCompat
            app:key="ADD_FIVE_GATES_TO_RANDOM"
            app:title="Add Five Gates" />

        <SwitchPreferenceCompat
            app:key="ADD_FIVE_ELEMENTS_TO_RANDOM"
            app:title="Add Five Elements Breathing" />

        <SwitchPreferenceCompat
            app:key="ADD_COILING_TO_RANDOM"
            app:title="Add Coiling Qi Gong" />

        <SwitchPreferenceCompat
            app:key="ADD_BLACK_DRAGON_TO_RANDOM"
            app:title="Add Black Dragon Body Wave" />

    </PreferenceCategory>

</PreferenceScreen>